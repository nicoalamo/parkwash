<p id="notice"><%= notice %></p>

<h1>Wash Types</h1>

<table>
  <thead>
    <tr>
      <th>Wash type code</th>
      <th>Wash type name</th>
      <th>Wash type description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wash_types.each do |wash_type| %>
      <tr>
        <td><%= wash_type.wash_type_code %></td>
        <td><%= wash_type.wash_type_name %></td>
        <td><%= wash_type.wash_type_description %></td>
        <td><%= link_to 'Show', wash_type %></td>
        <td><%= link_to 'Edit', edit_wash_type_path(wash_type) %></td>
        <td><%= link_to 'Destroy', wash_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

