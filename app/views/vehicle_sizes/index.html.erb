<p id="notice"><%= notice %></p>

<h1>Vehicle Sizes</h1>

<table>
  <thead>
    <tr>
      <th>Vehicle size code</th>
      <th>Vehicle size name</th>
      <th>Vehicle size description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicle_sizes.each do |vehicle_size| %>
      <tr>
        <td><%= vehicle_size.vehicle_size_code %></td>
        <td><%= vehicle_size.vehicle_size_name %></td>
        <td><%= vehicle_size.vehicle_size_description %></td>
        <td><%= link_to 'Show', vehicle_size %></td>
        <td><%= link_to 'Edit', edit_vehicle_size_path(vehicle_size) %></td>
        <td><%= link_to 'Destroy', vehicle_size, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

